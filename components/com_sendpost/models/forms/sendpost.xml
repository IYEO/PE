<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="sendpost" label="COM_SENDPOST_FORM_DEFAULT_LABEL">
        <field
            name="name"
            type="text"
            label="COM_SENDPOST_FORM_SENDER_NAME_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_FORM_SENDER_NAME_DESC"
            id="sender-name"
            class="form-control validate-username"
            size="30"
            hint="COM_SENDPOST_FORM_SENDER_NAME_PLACEHOLDER"
            filter="string"
            required="true"
            message="COM_SENDPOST_FORM_SENDER_NAME_MESSAGE"
        />
        <field
            name="phone"
            type="tel"
            label="COM_SENDPOST_FORM_SENDER_PHONE_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_FORM_SENDER_PHONE_DESC"
            id="sender-phone"
            class="form-control"
            size="30"
            hint="COM_SENDPOST_FORM_SENDER_PHONE_PLACEHOLDER"
            filter="string"
            required="true"            
            message="COM_SENDPOST_FORM_SENDER_PHONE_MESSAGE"
        />
        <field
            name="email"
            type="email"
            label="COM_SENDPOST_FORM_SENDER_EMAIL_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_FORM_SENDER_EMAIL_DESC"
            id="sender-email"
            class="form-control validate-email"
            size="30"
            hint="COM_SENDPOST_FORM_SENDER_EMAIL_PLACEHOLDER"
            filter="string"
            validate="email"
            message="COM_SENDPOST_FORM_SENDER_EMAIL_MESSAGE"
            autocomplete="email"
        />
        <field
            name="details"
            type="textarea"
            label="COM_SENDPOST_FORM_ENTER_DETAILS_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_FORM_ENTER_DETAILS_DESC"
            cols="50"
            rows="5"
            hint="COM_SENDPOST_FORM_ENTER_DETAILS_PLACEHOLDER"
            id="sender-message"
            class="form-control"
            filter="safehtml"
        />
        <field
            name="captcha"
            type="captcha"
            label="COM_SENDPOST_FORM_CAPTCHA_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_FORM_CAPTCHA_DESC"
            validate="captcha"
            namespace="sendpost"
            message="COM_SENDPOST_FORM_CAPTCHA_MESSAGE"
        />
        <field
            name="spacer"
            type="spacer"
            hr="true"
        />
    </fieldset>
</form>