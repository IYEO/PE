<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="sendpost" label="COM_SENDPOST_FORM_DEFAULT_LABEL">        
        <field
            name="name"
            type="text"
            label="COM_SENDPOST_SENDER_NAME_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_SENDER_NAME_DESC"
            id="sender-name"
            class="form-control"
            size="30"
            hint="COM_SENDPOST_SENDER_NAME_PLACEHOLDER"
            filter="string"
            required="true"
            validate="username"            
            message="Привет!"
        />
        <field
            name="phone"
            type="tel"
            label="COM_SENDPOST_SENDER_PHONE_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_SENDER_PHONE_DESC"
            id="sender-phone"
            class="form-control"
            size="30"
            hint="COM_SENDPOST_SENDER_PHONE_PLACEHOLDER"
            filter="string"
            required="true"
            validate="tel"
        />
        <field
            name="email"
            type="email"
            label="COM_SENDPOST_SENDER_EMAIL_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_SENDER_EMAIL_DESC"
            id="sender-email"
            class="form-control"
            size="30"
            hint="COM_SENDPOST_SENDER_EMAIL_PLACEHOLDER"
            filter="string"
            validate="email"
            autocomplete="email"
        />
        <field
            name="details"
            type="textarea"
            label="COM_SENDPOST_ENTER_MESSAGE_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_ENTER_MESSAGE_DESC"
            cols="50"
            rows="5"
            id="sender-message"
            class="form-control"
            filter="safehtml"
        />
        <field
            name="spacer"
            type="spacer"
            hr="true"
        />
    </fieldset>
    <fieldset name="captcha">
        <field
            name="captcha"
            type="captcha"
            label="COM_SENDPOST_CAPTCHA_LABEL"
            labelclass="control-label"
            description="COM_SENDPOST_CAPTCHA_DESC"
            validate="captcha"
            namespace="sendpost"
            required="true"
        />
    </fieldset>
</form>