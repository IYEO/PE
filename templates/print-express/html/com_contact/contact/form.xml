<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset name="contact" addrulepath="components/com_contact/models/rules" label="COM_CONTACT_CONTACT_DEFAULT_LABEL">
        <field
            name="contact_subject"
            type="hidden"
            label="COM_CONTACT_CONTACT_MESSAGE_SUBJECT_LABEL"
            description="COM_CONTACT_CONTACT_MESSAGE_SUBJECT_DESC"
            id="contact-emailmsg"
            size="1"
            filter="string"
            validate="contactemailsubject"
            required="true"
            default = "Заявка с сайта"
        />
        <field
            name="contact_name"
            type="text"
            label="COM_CONTACT_CONTACT_EMAIL_NAME_LABEL"
            labelclass="control-label"
            description="COM_CONTACT_CONTACT_EMAIL_NAME_DESC"
            id="contact-name"
            class="form-control"
            size="30"
            filter="string"
            required="true"
        />
        <field
            name="contact_phone"
            type="tel"
            label="COM_CONTACT_CONTACT_EMAIL_PHONE_LABEL"
            labelclass="control-label"
            description="COM_CONTACT_CONTACT_EMAIL_PHONE_DESC"
            id="contact-phone"
            class="form-control"
            size="30"
            filter="string"
            required="true"
        />
        <field
            name="contact_email"
            type="email"
            label="COM_CONTACT_EMAIL_LABEL"
            labelclass="control-label"
            description="COM_CONTACT_EMAIL_DESC"
            id="contact-email"
            class="form-control"
            size="30"
            filter="string"
            validate="contactemail"
            autocomplete="email"			
        />
        <field
            name="contact_message"
            type="textarea"
            label="COM_CONTACT_CONTACT_ENTER_MESSAGE_LABEL"
            labelclass="control-label"
            description="COM_CONTACT_CONTACT_ENTER_MESSAGE_DESC"
            cols="50"
            rows="5"
            id="contact-message"
            class="form-control"
            filter="safehtml"
            validate="contactemailmessage"			
        />
        <field
            name="spacer"
            type="spacer"
            label="COM_CONTACT_CONTACT_REQUIRED"
            labelclass="control-label"
            class="text"
        />
    </fieldset>
    <fieldset name="captcha">
        <field
            name="captcha"
            type="captcha"
            label="COM_CONTACT_CAPTCHA_LABEL"
            labelclass="control-label"
            description="COM_CONTACT_CAPTCHA_DESC"
            validate="captcha"
            namespace="contact"
        />
    </fieldset>
</form>
